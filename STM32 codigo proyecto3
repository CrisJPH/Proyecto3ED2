/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_UART5_Init();
  MX_SPI1_Init();
  /* USER CODE BEGIN 2 */
  LCD_Init();
  LCD_Clear(0x00);
  	/*FillRect(0, 0, 319, 239, 0xFFFF);
  	FillRect(50, 60, 20, 20, 0xF800);
  	FillRect(70, 60, 20, 20, 0x07E0);
  	FillRect(90, 60, 20, 20, 0x001F);*/

  	//LCD_Bitmap(0, 0, 320, 240, fondo);
  LCD_Bitmap(30,0,240,240,fondoPKM);
  LCD_Sprite(150,0,50,62,personaje,2,1, 0,0);





  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  	  	if (menu_displayed == 0)
	  	  	    {
	  	  	        HAL_UART_Transmit(&huart2, msg, 30, 100);  // Envía el primer mensaje del menú
	  	  	        HAL_UART_Transmit(&huart2, msg2, 35, 100); // Envía el segundo mensaje del menú
	  	  	        menu_displayed = 1; // Marca que el menú ya fue desplegado
	  	  	   /* for(int x = 0; x<320-50; x++){
	  	  	     HAL_Delay(15);
	  	  	   		  int anim2 = (x/5)%2;
	  	  	   		  LCD_Sprite(150,0,50,62,personaje,2,anim2, 0,0);
	  	  	   		  //V_line(x-1, 50,62, 0x421b);*/
	  	  	   	  }

	  	  if (HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_8) == GPIO_PIN_RESET) { // Botón presionado
	  	      uint8_t buffer1[1];  // Buffer para enviar la letra 'S'
	  	      uint8_t buffer2[4];  // Buffer para recibir la respuesta (+1 para el terminador nulo)

	  	      buffer1[0] = 'S';
	  	      HAL_UART_Transmit(&huart5, buffer1, sizeof(buffer1), 100); // Envía 'S'

	  	      HAL_UART_Receive(&huart5, buffer2, 3, HAL_MAX_DELAY); // Recibe 3 bytes
	  	      buffer2[3] = '\0'; // Asegura que el buffer sea un string válido

	  	      // Transmite los datos recibidos al UART2
	  	      HAL_UART_Transmit(&huart2, buffer2, 3, 100);

	  	      // Imprime el texto en la pantalla
	  	      LCD_Print("La temperatura de tu pokemon es", 20, 100, 1, 0x001F, 0xCAB9);
	  	      LCD_Print((char *)buffer2, 100, 130, 1, 0x001F, 0xFFF);

	  	      menu_displayed = 0;
	  	      HAL_Delay(200); // Pausa para evitar múltiples envíos rápidos (antirrebote básico)
	  	  }
	  	if (HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_6) == GPIO_PIN_RESET) { // Botón presionado
	  		//HAL_UART_Receive(&huart2, buffer, 1, 1000);
	  		  			  	  	menu_displayed = 0;
	  		  	  	              HAL_Delay(200); // Pausa para evitar múltiples envíos rápidos (antirrebote básico)
	  		  	  	          }

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 16;
  RCC_OscInitStruct.PLL.PLLN = 336;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV4;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

